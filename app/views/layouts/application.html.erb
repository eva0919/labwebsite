<script type="text/javascript">
	$( document ).ready(function(){
		var h = $(".content_page").css("height");
		// var data = h + "px";
		console.log(h);
		$("#menu").css("height",h);
		$("#menu").css("height","+=12");
		$("div.list_form:has(.list_form_second) ").append('<div class="arrow-right"></div>');
		$("div.list_form:has(.list_form_second) ").click(function(){
			event.preventDefault();
			$("div.list_form:has(.list_form_second) ").addClass('list_hover');
			$("div.list_form:has(.list_form_second) ").css("color","white");
			$(this).removeClass('list_hover');
			$(this).css("color","#A2A2A2");
			$('.list_form_second').css("display","none");
			$(this).children('.list_form_second').css("display","block");
			$(this).children('.list_form_second').css("color","white");
			var h = $(this).css("height");
			$(this).children('.list_form_second').css("top",h);
			$(this).children('.list_form_second').css("top","+=75");
			

		});
	});
</script>
